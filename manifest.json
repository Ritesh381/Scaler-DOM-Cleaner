{
  "manifest_version": 3,
  "name": "Scaler DOM Cleaner",
  "version": "1.0.0",
  "description": "Removes unwanted elements from Scaler Academy todos page",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.scaler.com/*", "https://scaler.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
