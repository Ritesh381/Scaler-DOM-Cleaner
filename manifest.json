{
  "manifest_version": 3,
  "name": "Scaler DOM Cleaner",
  "version": "1.4.0",
  "description": "Clean up Scaler Academy UI, search problems instantly & auto-reset codes with Practice Mode",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Scaler DOM Cleaner Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://www.scaler.com/*", "https://scaler.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
